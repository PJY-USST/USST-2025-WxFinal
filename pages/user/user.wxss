/* 页面容器 */
.mine-container {
    background-color: #fff;
    min-height: 100vh;
  }
  
  /* 顶部用户信息 */
  .profile {
    display: flex;
    align-items: center;
    padding: 20px 16px;
    border-bottom: 1px solid #f5f5f5;
  }
  .avatar {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    margin-right: 12px;
  }
  .profile-info {
    flex: 1;
  }
  .nickname {
    font-size: 18px;
    font-weight: 500;
    margin-bottom: 4px;
  }
  .wechat-id {
    font-size: 14px;
    color: #666;
    margin-bottom: 8px;
  }
  .status {
    display: flex;
    align-items: center;
    font-size: 12px;
    color: #999;
  }
  .status-tag {
    padding: 2px 6px;
    border: 1px solid #ccc;
    border-radius: 4px;
    margin-right: 8px;
  }
  .friend-tip {
    margin-right: 4px;
  }
  .dot {
    color: #ff4d4f; /* 红点颜色 */
  }
  .qrcode {
    width: 24px;
    height: 24px;
  }
  
  /* 功能菜单 */
  .menu-list {
    border-top: 1px solid #f5f5f5;
  }
  .menu-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16px;
    border-bottom: 1px solid #f5f5f5;
  }
  .menu-icon image {
    width: 24px;
    height: 24px;
  }
  .menu-text {
    margin-left: 12px;
    font-size: 16px;
    flex: 1;
  }
  .arrow {
    width: 16px;
    height: 16px;
    opacity: 0.6;
  }