.a-search-bar{
  height: 40px;
  width: 80%;
  border-radius: 20px;
  margin-left: 10%;
  margin-right: 10%;
  border: gray solid 1px;
  line-height: 40px;
}
.a-banner{
  margin-top: 10px;
  height: 19%;
  margin-left: 35px;
  margin-right: 35px;
}
.a-banner-i{
  border-radius: 30px;
}
.a-new-rank{
  width: 100%;
  height: 600px;
}
.a-new-rank-title{
  font-size: x-large;
  margin-top: 5px;
  font-weight: bolder;
  margin-left:5% ;
  margin-bottom: 10px;
  color: #ff6677;
}
.a-new-rank-c{
  height: 250px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.a-new-song-c{
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  display: flex;
  flex-direction: row;
  margin-bottom: 10px;
  background-color: #aaaaaa33;
  border-radius: 15px;
}
.a-new-song-c-p{
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  display: flex;
  flex-direction: row;
  margin-bottom: 10px;
  background-color: #aaaaaaff;
  color: #ffffff;
  border-radius: 15px;
  box-shadow: 0px 0px 20px firebrick;
  z-index: 2;
}
.a-new-song-pic{
  height: 70px;
  width: 70px;
  border-radius: 15px;
}
.a-new-song-title{
  margin-left: 10px;
  margin-top: 10px;
  font-weight: bold;
}
.a-new-song-owner{
  margin-left: 10px;
  margin-top: 10px;
  font-size: small;
  color: gray;
}
.a-new-song-owner-p{
  margin-left: 10px;
  margin-top: 10px;
  font-size: small;
  color: #ffffff99;
}